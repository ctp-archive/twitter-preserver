<!doctype html>
<html>
  <head>
    <title>{{ pageTitle }}</title>
    <style>
      {{style}}
    </style>
  </head>
  <body>
    <header>
      <div class="container">
        <a class="username" href={% if homePath %}{{homePath}}{% else %}#{% endif %}>{{account.username}}</a>
        {%if include.tweets %}
          <a href="{{pagePath}}tweets.html">Tweets</a>
        {% endif %}
        {%if include.dms %}
          <a href="{{pagePath}}dms.html">Direct messages</a>
        {% endif %}
      </div>
    </header>
    <main class="container">
      {% block content %}{% endblock %}
    </main>
  </body>
</html>