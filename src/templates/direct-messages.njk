{% extends "includes/base.njk" %}

{% block content %}
  <h1>{{account.username}} Direct Messages</h1>
  {%for dm in dms %}
    <article role="article" class="tweet">
      <h2>
        <a href="#{{dm.id}}" id="{{dm.id}}">{{dm.createdAt | dateFromISO }}</a>
      </h2>
      <p>{{dm.text | limitLength(300) | autoLink | safe}}</p>
      <ul class="meta">
        <li>{{dm._messageCount}} message{%if dm._messageCount > 1%}s{% endif %}
        </li>
        <li>
          <a href="direct-messages/{{dm.id}}.html">View Direct Message</a>
        </li>
      </ul>
    </article>
    {{dm.conversationId}}
  {% endfor %}
{% endblock %}